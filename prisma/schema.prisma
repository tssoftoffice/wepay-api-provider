generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(uuid())
  username       String         @unique
  password       String
  email          String?
  role           String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  partnerId      String?
  firstName      String?
  lastName       String?
  phone          String?
  auditLogs      AuditLog[]
  customer       Customer?
  partner        Partner?       @relation(fields: [partnerId], references: [id])
  userActivities UserActivity[]
}

model Partner {
  id                 String                    @id @default(uuid())
  name               String
  domain             String?                   @unique
  logoUrl            String?
  themeConfig        String?
  subscriptionStatus String                    @default("PENDING")
  subscriptionEnd    DateTime?
  packageId          String?
  walletBalance      Decimal                   @default(0)
  apiKey             String?                   @unique
  secretKey          String?
  createdAt          DateTime                  @default(now())
  updatedAt          DateTime                  @updatedAt
  auditLogs          AuditLog[]
  customers          Customer[]
  gameTopups         GameTopupTransaction[]
  package            SubscriptionPackage?      @relation(fields: [packageId], references: [id])
  gamePrices         PartnerGamePrice[]
  partnerTopups      PartnerTopupTransaction[]
  subscriptionTxns   SubscriptionTransaction[]
  users              User[]
  userActivities     UserActivity[]
}

model SubscriptionPackage {
  id           String    @id @default(uuid())
  name         String
  price        Decimal
  maxCustomers Int?
  partners     Partner[]
}

model Customer {
  id            String                 @id @default(uuid())
  userId        String                 @unique
  partnerId     String
  walletBalance Decimal                @default(0)
  createdAt     DateTime               @default(now())
  partner       Partner                @relation(fields: [partnerId], references: [id])
  user          User                   @relation(fields: [userId], references: [id])
  gameTopups    GameTopupTransaction[]
  topupRequests TopupRequest[]
}

model Game {
  id            String                 @id @default(uuid())
  name          String
  code          String                 @unique
  faceValue     Decimal                @default(0)
  providerPrice Decimal                @default(0)
  baseCost      Decimal
  status        String                 @default("ACTIVE")
  imageUrl      String?
  description   String?
  servers       String?
  topups        GameTopupTransaction[]
  prices        PartnerGamePrice[]
}

model PartnerGamePrice {
  id        String  @id @default(uuid())
  partnerId String
  gameId    String
  sellPrice Decimal
  imageUrl  String?
  game      Game    @relation(fields: [gameId], references: [id])
  partner   Partner @relation(fields: [partnerId], references: [id])

  @@unique([partnerId, gameId])
}

model TopupRequest {
  id         String   @id @default(uuid())
  customerId String
  amount     Decimal
  slipUrl    String?
  status     String   @default("PENDING")
  reason     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id])
}

model GameTopupTransaction {
  id            String    @id @default(uuid())
  customerId    String?
  partnerId     String
  gameId        String
  baseCost      Decimal
  providerPrice Decimal   @default(0)
  sellPrice     Decimal
  status        String    @default("PENDING")
  server        String?
  targetId      String?
  providerTxnId String?
  createdAt     DateTime  @default(now())
  customer      Customer? @relation(fields: [customerId], references: [id])
  game          Game      @relation(fields: [gameId], references: [id])
  partner       Partner   @relation(fields: [partnerId], references: [id])
}

model PartnerTopupTransaction {
  id            String   @id @default(uuid())
  partnerId     String
  amount        Decimal
  status        String   @default("PENDING")
  providerTxnId String?
  createdAt     DateTime @default(now())
  partner       Partner  @relation(fields: [partnerId], references: [id])
}

model SubscriptionPlan {
  id           String                    @id @default(uuid())
  name         String
  description  String?
  price        Decimal
  duration     Int                       @default(30)
  features     String?
  isActive     Boolean                   @default(true)
  createdAt    DateTime                  @default(now())
  updatedAt    DateTime                  @updatedAt
  transactions SubscriptionTransaction[]
}

model SubscriptionTransaction {
  id        String            @id @default(uuid())
  partnerId String
  amount    Decimal
  status    String            @default("PENDING")
  createdAt DateTime          @default(now())
  planId    String?
  partner   Partner           @relation(fields: [partnerId], references: [id])
  plan      SubscriptionPlan? @relation(fields: [planId], references: [id])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model AuditLog {
  id        String   @id @default(uuid())
  partnerId String
  userId    String?
  action    String
  details   String?
  createdAt DateTime @default(now())
  partner   Partner  @relation(fields: [partnerId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
}

model UserActivity {
  id        String   @id @default(uuid())
  userId    String
  partnerId String?
  action    String
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  partner   Partner? @relation(fields: [partnerId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Notification {
  id        String   @id @default(uuid())
  title     String
  message   String
  type      String   @default("INFO")
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
