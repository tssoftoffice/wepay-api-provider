generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String    @unique
  password  String
  email     String?
  role      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  partnerId String?
  firstName String?
  lastName  String?
  phone     String?
  customer  Customer?
  partner   Partner?  @relation(fields: [partnerId], references: [id])
}

model Partner {
  id                 String                    @id @default(uuid())
  name               String
  domain             String?                   @unique
  logoUrl            String?
  themeConfig        String?
  subscriptionStatus String                    @default("PENDING")
  subscriptionEnd    DateTime?
  packageId          String?
  walletBalance      Decimal                   @default(0)
  apiKey             String?                   @unique
  secretKey          String?
  customers          Customer[]
  gameTopups         GameTopupTransaction[]
  package            SubscriptionPackage?      @relation(fields: [packageId], references: [id])
  gamePrices         PartnerGamePrice[]
  partnerTopups      PartnerTopupTransaction[]
  subscriptionTxns   SubscriptionTransaction[]
  users              User[]
  createdAt          DateTime                  @default(now())
  updatedAt          DateTime                  @updatedAt
}

model SubscriptionPackage {
  id           String    @id @default(uuid())
  name         String
  price        Decimal
  maxCustomers Int?
  partners     Partner[]
}

model Customer {
  id            String                 @id @default(uuid())
  userId        String                 @unique
  partnerId     String
  walletBalance Decimal                @default(0)
  partner       Partner                @relation(fields: [partnerId], references: [id])
  createdAt     DateTime               @default(now())
  user          User                   @relation(fields: [userId], references: [id])
  gameTopups    GameTopupTransaction[]
  topupRequests TopupRequest[]
}

model Game {
  id       String                 @id @default(uuid())
  name     String
  code     String                 @unique
  faceValue Decimal            @default(0) // Actual denomination value (10, 20, 50) for WePay
  providerPrice Decimal       @default(0) // Cost from Supplier (WePay)
  baseCost Decimal            // Cost for Partners (Provider Price + Platform Margin)
  status   String                 @default("ACTIVE")
  imageUrl String?
  description String?
  servers  String?
  topups   GameTopupTransaction[]
  prices   PartnerGamePrice[]
}

model PartnerGamePrice {
  id        String  @id @default(uuid())
  partnerId String
  gameId    String
  sellPrice Decimal
  game      Game    @relation(fields: [gameId], references: [id])
  partner   Partner @relation(fields: [partnerId], references: [id])

  @@unique([partnerId, gameId])
}

model TopupRequest {
  id         String   @id @default(uuid())
  customerId String
  amount     Decimal
  slipUrl    String?
  status     String   @default("PENDING")
  reason     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id])
}

model GameTopupTransaction {
  id            String   @id @default(uuid())
  customerId    String?
  partnerId     String
  gameId        String
  baseCost      Decimal
  providerPrice Decimal   @default(0) // Cost from Supplier (WePay) at time of transaction
  sellPrice     Decimal
  status        String   @default("PENDING")
  server        String?
  targetId      String? // Player ID in game
  providerTxnId String?
  createdAt     DateTime @default(now())
  game          Game     @relation(fields: [gameId], references: [id])
  partner       Partner  @relation(fields: [partnerId], references: [id])
  customer      Customer? @relation(fields: [customerId], references: [id])
}

model PartnerTopupTransaction {
  id            String   @id @default(uuid())
  partnerId     String
  amount        Decimal
  status        String   @default("PENDING")
  providerTxnId String?
  createdAt     DateTime @default(now())
  partner       Partner  @relation(fields: [partnerId], references: [id])
}

model SubscriptionTransaction {
  id        String   @id @default(uuid())
  partnerId String
  amount    Decimal
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  partner   Partner  @relation(fields: [partnerId], references: [id])
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}
